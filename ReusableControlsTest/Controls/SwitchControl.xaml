<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ReusableControlsTest.Controls.SwitchControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:ReusableControlsTest.Converters">
    <ContentView.Resources>
        <converters:IsStringNullOrEmptyConverter
            x:Key="IsStringNullOrEmptyConverter" />
    </ContentView.Resources>
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Grid
                ColumnDefinitions="*,Auto">
                <VerticalStackLayout
                    Grid.Column="0"
                    VerticalOptions="Center">
                    <Label
                        Grid.Column="0"
                        FontSize="Medium"
                        Text="{TemplateBinding Title}"
                        VerticalOptions="Center"
                        VerticalTextAlignment="Center" />
                    <Label
                        Grid.Column="0"
                        FontSize="Caption"
                        IsVisible="{TemplateBinding Description,
                                                    Converter={StaticResource IsStringNullOrEmptyConverter}}"
                        Text="{TemplateBinding Description}" />
                </VerticalStackLayout>
                <Switch
                    Grid.Column="1"
                    IsToggled="{TemplateBinding IsToggled}" />
            </Grid>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>
