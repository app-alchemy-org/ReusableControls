<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ReusableControlsTest.Controls.DeviceCard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Grid
                HeightRequest="110">
                <Frame
                    Margin="0"
                    Padding="12"
                    BackgroundColor="#50000000"
                    BorderColor="Transparent"
                    CornerRadius="20">
                    <Grid
                        ColumnDefinitions="*,*"
                        Opacity="1"
                        RowDefinitions="Auto,*"
                        RowSpacing="3">
                        <Image
                            Grid.Row="0"
                            Grid.Column="0"
                            HorizontalOptions="Start"
                            Source="{TemplateBinding IconUri}"
                            WidthRequest="27" />
                        <VerticalStackLayout
                            Grid.Row="1"
                            Grid.ColumnSpan="2">
                            <Label
                                FontSize="Small"
                                Text="{TemplateBinding Title}" />
                            <Label
                                FontSize="Caption"
                                Text="{TemplateBinding Name}"
                                TextColor="LightGray" />
                            <Label
                                FontSize="Caption"
                                Text="{TemplateBinding Status}"
                                TextColor="LightGray" />
                        </VerticalStackLayout>
                    </Grid>
                </Frame>
            </Grid>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>
