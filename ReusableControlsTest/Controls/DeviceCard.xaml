<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ReusableControlsTest.Controls.DeviceCard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Grid
                HeightRequest="110"
                WidthRequest="150">
                <Frame
                    BackgroundColor="Black"
                    BorderColor="Transparent"
                    CornerRadius="20"
                    Opacity="0.5" />
                <Grid
                    Margin="0"
                    Padding="10"
                    ColumnDefinitions="*,*"
                    Opacity="1"
                    RowDefinitions="Auto,*">
                    <Image
                        Grid.Row="0"
                        Grid.Column="0"
                        HorizontalOptions="Start"
                        Source="{TemplateBinding IconUri}"
                        WidthRequest="50" />
                    <VerticalStackLayout
                        Grid.Row="1"
                        Grid.ColumnSpan="2">
                        <Label
                            FontSize="Micro"
                            Text="{TemplateBinding Title}" />
                        <Label
                            FontSize="Caption"
                            Text="{TemplateBinding Name}"
                            TextColor="LightGray" />
                        <Label
                            FontSize="Caption"
                            Text="{TemplateBinding Status}"
                            TextColor="LightGray" />
                    </VerticalStackLayout>
                    <Image
                        Grid.Row="0"
                        Grid.Column="1"
                        HorizontalOptions="End"
                        Source="{TemplateBinding IconUri}"
                        WidthRequest="40" />
                </Grid>
            </Grid>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>
